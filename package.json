{
   "name": "api",
   "version": "0.0.1",
   "description": "Awesome project developed with TypeORM.",
   "devDependencies": {
      "@types/cors": "^2.8.6",
      "@types/express": "^4.17.2",
      "@types/node": "13.1.6",
      "@types/socket.io": "^2.1.4",
      "ts-node": "8.6.0",
      "typescript": "3.7.4"
   },
   "dependencies": {
      "body-parser": "1.19.0",
      "cors": "^2.8.5",
      "express": "4.17.1",
      "mysql2": "2.1.0",
